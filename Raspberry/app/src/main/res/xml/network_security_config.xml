<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Autoriser le trafic en texte clair pour localhost -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">172.16.16.8</domain> <!-- Ajouter l'adresse IP de ton Raspberry Pi -->
    </domain-config>
    <!-- Autoriser le trafic en texte clair globalement pour l'application -->
    <base-config cleartextTrafficPermitted="true" />
</network-security-config>
